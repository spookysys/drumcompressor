{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "g++",
	"isShellCommand": true,
	"args": ["-std=c++14", "-g", "play_all.cpp", "-o", "play_all.exe"],
	"showOutput": "always",
	"problemMatcher": {
		"owner": "cpp",
		"fileLocation": ["relative", "${workspaceRoot}"],
		"pattern": {
			"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
			"file": 1,
			"line": 2,
			"column":3,
			"severity": 4,
			"message": 5
		}
	}
}
